#!/bin/sh

interface="$1"

action="$2"

kill_udhcpc()
{
  if [ -f "/var/run/udhcpc-${interface}.pid" ]; then
    kill $(cat "/var/run/udhcpc-${interface}.pid") 2>/dev/null
    sleep 1
  fi
}

case $action in

  up)
    kill_udhcpc
    udhcpc -b -T2 -t6 -S -s /etc/udhcpc.script -H $(uname -n) -p /var/run/udhcpc-${interface}.pid -i ${interface}
    ;;

  down)
    kill_udhcpc
    ;;

esac

exit 0
